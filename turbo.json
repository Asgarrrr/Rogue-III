{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "env": [
        "DATABASE_URL",
        "SERVER_URL",
        "SERVER_HOST",
        "SERVER_PORT",
        "CLIENT_URL",
        "CLIENT_PORT",
        "REDIS_URL",
        "NODE_ENV"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "SERVER_URL",
        "SERVER_HOST",
        "SERVER_PORT",
        "CLIENT_URL",
        "CLIENT_PORT",
        "REDIS_URL",
        "NODE_ENV",
        "PERF_PROFILE"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}

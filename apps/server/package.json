{
  "name": "@rogue/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target=bun --external=ioredis --external=pg --external=better-auth --external=drizzle-orm",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "drizzle:generate": "bunx --bun drizzle-kit generate --config src/infra/database/drizzle.config.ts",
    "drizzle:push": "bunx --bun drizzle-kit push --config src/infra/database/drizzle.config.ts",
    "check-types": "tsc --noEmit",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "^1.4.11",
    "@rogue/auth": "workspace:*",
    "@rogue/contracts": "workspace:*",
    "better-auth": "^1.4.4",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.6",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6"
  },
  "packageManager": "bun@1.3.3",
  "engines": {
    "bun": ">=1.3.0"
  },
  "module": "src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  }
}
